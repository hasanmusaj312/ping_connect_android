<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".fragment.EditProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <ImageView
            android:contentDescription="@string/content_description"
                android:id="@+id/menuButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/red">

            <TextView
                android:id="@+id/badgeTextView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:contentDescription="@string/content_description"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/img_logo"
            android:scaleType="centerInside"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_r"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="@string/edit_profile"
            android:textColor="#000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/photosContainerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="horizontal">

                            <ImageView
            android:contentDescription="@string/content_description"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_gravity="center"
                                android:scaleType="center"
                                android:src="@drawable/img_user_agreement_bg" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#F92442"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/uploadNowButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:fontFamily="@font/ubuntu_b"
                            android:gravity="center"
                            android:text="@string/upload_nnow"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/nameTextView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/ubuntu_b"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/heightTextView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/ubuntu_m"
                                android:gravity="end"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/aboutTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_r"
                                android:layout_marginBottom="5dp"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="310dp"
                    android:gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:fontFamily="@font/ubuntu_r"
                                android:gravity="center"
                                android:text="@string/i_am_a"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/maleButton"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:gravity="center"
                                    android:text="@string/male"
                                    android:textColor="#999999"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/femaleButton"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:gravity="center"
                                    android:text="@string/female"
                                    android:textColor="#FD3F53"
                                    android:textSize="15sp" />

                            </LinearLayout>

                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EAEAEA" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:fontFamily="@font/ubuntu_r"
                                android:gravity="center"
                                android:text="@string/looking_for_a"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/preferredMaleButton"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:gravity="center"
                                    android:text="@string/male"
                                    android:textColor="#999999"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/preferredFemaleButton"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:gravity="center"
                                    android:text="@string/female"
                                    android:textColor="#FD3F53"
                                    android:textSize="15sp" />

                            </LinearLayout>

                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EAEAEA" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/ubuntu_r"
                                android:textSize="15sp"
                                android:text="@string/age"
                                android:textColor="#000000"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:orientation="vertical"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/ageDescTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:layout_gravity="start"
                                    android:textSize="15sp"
                                    android:text=""
                                    android:textColor="#000000"/>

                                <io.apptik.widget.MultiSlider
                                    android:id="@+id/ageSlider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:range="@drawable/horizontal_line"
                                    android:track="@drawable/horizontal_line"
                                    app:thumbNumber="2"
                                    app:stepsThumbsApart="5"
                                    app:drawThumbsApart="true" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubuntu_r"
                                        android:layout_gravity="start"
                                        android:layout_marginStart="2dp"
                                        android:textSize="15sp"
                                        android:text="@string/_18"
                                        android:textColor="#000000"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubuntu_r"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="8dp"
                                        android:gravity="end"
                                        android:textSize="15sp"
                                        android:text="@string/_50"
                                        android:textColor="#000000"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubuntu_r"
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="2dp"
                                        android:gravity="end"
                                        android:textSize="15sp"
                                        android:text="@string/_80"
                                        android:textColor="#000000"/>

                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="495dp"
                    android:gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:fontFamily="@font/ubuntu_r"
                                android:gravity="center"
                                android:text="@string/update_password"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
            android:contentDescription="@string/content_description"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_password" />

                            <EditText
                                android:id="@+id/currentPasswordTextField"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_marginStart="5dp"
                                android:background="#FFFFFF"
                                android:fontFamily="@font/ubuntu_r"
                                android:hint="@string/current_password"
                                android:inputType="textPassword"
                                android:textSize="15sp"
                                android:autofillHints="" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EAEAEA" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
            android:contentDescription="@string/content_description"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_password" />

                            <EditText
                                android:id="@+id/newPasswordTextField"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_marginStart="5dp"
                                android:background="#FFFFFF"
                                android:fontFamily="@font/ubuntu_r"
                                android:hint="@string/new_password"
                                android:inputType="textPassword"
                                android:textSize="15sp"
                                android:autofillHints="" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EAEAEA" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
            android:contentDescription="@string/content_description"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_password" />

                            <EditText
                                android:id="@+id/confirmPasswordTextField"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_marginStart="5dp"
                                android:background="#FFFFFF"
                                android:fontFamily="@font/ubuntu_r"
                                android:hint="@string/confirm_new_password"
                                android:inputType="textPassword"
                                android:textSize="15sp"
                                android:autofillHints="" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="720dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/updatePasswordButton"
                        android:layout_width="200dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:elevation="8dp"
                        android:fontFamily="@font/ubuntu_b"
                        android:gravity="center"
                        android:text="@string/update_password"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>