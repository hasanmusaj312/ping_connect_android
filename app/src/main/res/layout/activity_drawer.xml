<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_drawer"
        android:id="@+id/app_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/menu_bg_corner_shadow"
        android:fitsSystemWindows="true" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transparent">

                <ImageView
                    android:contentDescription="@string/content_description"
                    android:layout_width="188dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="38dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/img_logo"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:id="@+id/homeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="RtlSymmetry,UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_home"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/home"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="RtlSymmetry">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingEnd="15dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:fontFamily="@font/ubuntu_m"
                            android:textSize="14sp"
                            android:text="@string/search_distance"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/radiusTextView"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:paddingEnd="15dp"
                            android:gravity="end"
                            android:fontFamily="@font/ubuntu_m"
                            android:textSize="15sp"
                            android:text=""
                            android:textColor="#F92442"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="3dp">

                        <io.apptik.widget.MultiSlider
                            android:id="@+id/multiSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:track="@drawable/horizontal_line"
                            app:range="@drawable/horizontal_line"
                            app:thumbColor="#F92442"
                            app:thumbNumber="1"
                            app:stepsThumbsApart="1"
                            app:drawThumbsApart="true" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="start"
                            android:fontFamily="@font/ubuntu_r"
                            android:textSize="12sp"
                            android:text="@string/_150"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginStart="35dp"
                            android:fontFamily="@font/ubuntu_r"
                            android:text="@string/_1_mi"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/ubuntu_r"
                            android:text="@string/_200_mi"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/descriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/ubuntu_r"
                        android:textSize="10sp"
                        android:text=""
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/about_ping_label"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myFavoritesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_favorite_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/my_favorites"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/messagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/messages"
                        android:textColor="#000000"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center|start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/red">

                        <TextView
                            android:id="@+id/badgeTextView"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textSize="10sp"
                            android:textColor="@color/white"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/faqLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_faq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/faq"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editProfileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/edit_profile"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/termsConditionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_terms"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/terms_amp_conditions_label"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/privacyPolicyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_terms"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/privacy_policy_label"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contactUsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/contact_us"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pushNotificationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notification"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/notification"
                        android:textColor="#000000"/>

                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:id="@+id/labeledSwitch"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:textSize="14sp"
                        app:on="true"
                        app:colorOn="#000000"
                        app:colorBorder="#000000"
                        android:fontFamily="@font/ubuntu_b"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/deleteAccountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/content_description"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/delete_account"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/allUsersLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/content_description"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_all_users"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_m"
                        android:textSize="14sp"
                        android:text="@string/all_users"
                        android:textColor="#000000"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
