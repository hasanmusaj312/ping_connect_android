<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.signin.AgreementActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/new_4"
            android:contentDescription="@string/content_description" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/img_logo_light"
            android:scaleType="centerInside"
            android:contentDescription="@string/content_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="35dp"
            android:layout_gravity="bottom">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:cardBackgroundColor="#F0E3354F"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="@string/real_time_dating"
                            android:textColor="#FFFFFF"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="@string/dot"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="@string/no_missed_opportunities"
                            android:textColor="#FFFFFF"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="@string/dot"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="@string/eliminate_awkward_encounters"
                            android:textColor="#FFFFFF"/>

                    </FrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_m"
                android:layout_gravity="start"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/by_tapping_agree_you_agree_to_nour_privacy_and_terms_of_use_polices"
                android:textColor="#FFFFFF"
                tools:ignore="RtlHardcoded" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="22dp">

                <LinearLayout
                    android:id="@+id/agreeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_accept"
                        android:layout_marginStart="15dp"
                        android:tint="#FE0025"
                        android:layout_gravity="center"
                        android:contentDescription="@string/content_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_b"
                        android:textSize="17sp"
                        android:text="@string/i_agree"
                        android:textColor="#FE0025"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>