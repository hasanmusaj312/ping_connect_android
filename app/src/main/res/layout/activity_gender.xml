<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.signin.GenderActivity">

    <ImageView
        android:contentDescription="@string/content_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_gender_screen_bg" />

    <ImageView
        android:contentDescription="@string/content_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/img_logo_light"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/ubuntu_r"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/i_am_a"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/maleButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ubuntu_r"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/male"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/femaleButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/ubuntu_r"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/female"
                            android:textColor="#FD3F53"/>

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/ubuntu_r"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="@string/looking_for_a"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/preferredMaleButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ubuntu_r"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/male"
                            android:textColor="#FD3F53"/>

                        <TextView
                            android:id="@+id/preferredFemaleButton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/ubuntu_r"
                            android:layout_gravity="start"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/female"
                            android:textColor="#999999"/>

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu_r"
                        android:text="@string/age"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ageDescTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/ubuntu_r"
                            android:text="@string/between_18_and_80"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <io.apptik.widget.MultiSlider
                            android:id="@+id/ageSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:track="@drawable/horizontal_line"
                            app:drawThumbsApart="true"
                            app:range="@drawable/horizontal_line"
                            app:stepsThumbsApart="5"
                            app:thumbNumber="2" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/ubuntu_r"
                                android:text="@string/_18"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/ubuntu_r"
                                android:gravity="end"
                                android:text="@string/_50"
                                android:textColor="#000000"
                                android:textSize="15sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginEnd="2dp"
                                android:fontFamily="@font/ubuntu_r"
                                android:gravity="end"
                                android:text="@string/_80"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="35dp"
        android:layout_gravity="bottom">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:cardElevation="5dp"
            app:cardCornerRadius="22dp">

            <TextView
                android:id="@+id/nextButton"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/ubuntu_b"
                android:textSize="17sp"
                android:text="@string/next"
                android:textColor="#FE0025"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>