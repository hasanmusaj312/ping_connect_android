<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.signin.UploadPhotoActivity">

    <ImageView
        android:contentDescription="@string/content_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/new_2" />

    <ImageView
        android:contentDescription="@string/content_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/img_logo_light"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="8dp"
            android:fontFamily="@font/ubuntu_r"
            android:textSize="25sp"
            android:text="@string/upload_photos"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:elevation="8dp"
            android:fontFamily="@font/ubuntu_b"
            android:textSize="17sp"
            android:text="@string/you_can_upload_up_to_4_photos"
            android:textColor="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="top"
                app:cardElevation="5dp"
                app:cardCornerRadius="100dp">

                <ImageView
        android:contentDescription="@string/content_description"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="50dp"
                    android:tint="#AAAAAA"
                    android:src="@drawable/ic_photo" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="170dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="#F92442"
                app:cardElevation="5dp"
                app:cardCornerRadius="40dp">

                <TextView
                    android:id="@+id/uploadNowButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="@string/upload_nnow"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:fontFamily="@font/ubuntu_b"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>